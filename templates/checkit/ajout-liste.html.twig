{% extends 'base.html.twig' %}

{% block title %}Hello CheckitController!{% endblock %}

{% block body %}

<div class="container">
    <div class="accordion" id="accordionExample1">
    <div class="accordion-item">
        <h2 class="accordion-header">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            Ajouter une liste
        </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample1">
        <div class="accordion-body">
            {{ form_start(formList) }}
            <div class="mb-3 form-group">
                {{ form_row(formList.title, {'attr': {'class': 'form-control'}} ) }}
            </div>
            <div class="mb-3 form-group">
                {{ form_row(formList.category, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        </div>
            <button type="submit" class="btn btn-primary m-3">Ajouter</button>
        {{ form_end(formList) }}
    </div>
</div>

{% endblock %}






